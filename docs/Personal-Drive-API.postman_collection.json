    },
    {
      "key": "fileId",
      "value": "",
      "type": "string"
    },
    {
      "key": "presignedUploadUrl",
      "value": "",
      "type": "string"
    },
    {
      "key": "presignedDownloadUrl",
      "value": "",
      "type": "string"
    }
  ]
}
