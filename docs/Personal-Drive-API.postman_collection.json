    {
      "name": "File Upload Flow",
      "item": [
        {
          "name": "1. Presign Upload",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"Response contains fileId and upload URL\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.fileId).to.exist;",
                  "    pm.expect(jsonData.upload).to.exist;",
                  "    pm.expect(jsonData.upload.url).to.exist;",
                  "    ",
                  "    // Save fileId and upload URL for next requests",
                  "    pm.collectionVariables.set(\"fileId\", jsonData.fileId);",
                  "    pm.collectionVariables.set(\"presignedUploadUrl\", jsonData.upload.url);",
                  "    ",
                  "    if (jsonData.upload.mode === 'multipart') {",
                  "        pm.collectionVariables.set(\"uploadId\", jsonData.upload.uploadId);",
                  "    }",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "X-User-Id",
                "value": "{{userId}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"name\": \"test.txt\",\n    \"size\": 25,\n    \"mimeType\": \"text/plain\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{pythonServiceUrl}}/api/v1/upload/presign",
              "host": ["{{pythonServiceUrl}}"],
              "path": ["api", "v1", "upload", "presign"]
            },
            "description": "Generate a presigned URL for file upload. Returns fileId and presigned upload URL."
          },
          "response": []
        },
        {
          "name": "2. Upload File to S3",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Validate presigned URL is available",
                  "var uploadUrl = pm.collectionVariables.get(\"presignedUploadUrl\");",
                  "if (!uploadUrl) {",
                  "    throw new Error(\"Presigned upload URL not found. Run '1. Presign Upload' first.\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Upload successful\", function () {",
                  "    // S3 typically returns 200 OK for successful uploads",
                  "    pm.expect(pm.response.code).to.be.oneOf([200, 204]);",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "{{mimeType}}",
                "type": "text",
                "description": "Should match the mimeType from presignUpload"
              }
            ],
            "body": {
              "mode": "binary",
              "binary": []
            },
            "url": {
              "raw": "{{presignedUploadUrl}}"
            },
            "description": "Upload file to S3 using the presigned URL from step 1.\n\n**Note:** In Postman:\n1. Change body type to 'binary'\n2. Select your test file\n3. The URL should be the presignedUploadUrl from step 1"
          },
          "response": []
        },
        {
          "name": "3. Complete Upload",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "// Validate fileId is available",
                  "var fileId = pm.collectionVariables.get(\"fileId\");",
                  "if (!fileId) {",
                  "    throw new Error(\"File ID not found. Run '1. Presign Upload' first.\");",
                  "}"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test(\"File indexed successfully\", function () {",
                  "    var jsonData = pm.response.json();",
                  "    pm.expect(jsonData.status).to.eql(\"indexed\");",
                  "    pm.expect(jsonData.fileId).to.exist;",
                  "    pm.expect(jsonData.indexed).to.be.true;",
                  "    pm.expect(jsonData.textExtracted).to.be.true;",
                  "    pm.expect(jsonData.hash).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              },
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              },
              {
                "key": "X-User-Id",
                "value": "{{userId}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n    \"fileId\": \"{{fileId}}\"\n}",
              "options": {
                "raw": {
                  "language": "json"
                }
              }
            },
            "url": {
              "raw": "{{pythonServiceUrl}}/api/v1/upload/complete",
              "host": ["{{pythonServiceUrl}}"],
              "path": ["api", "v1", "upload", "complete"]
            },
            "description": "Complete file upload, extract text, compute hash, and index semantically."
          },
          "response": []
        }
      ],
      "description": "Complete file upload flow: presign → upload → complete"
    },
